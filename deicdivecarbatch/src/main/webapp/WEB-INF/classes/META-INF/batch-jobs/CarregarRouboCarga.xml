<job id="carregarRouboCarga" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	version="1.0" restartable="false">
	<step id="meuStep">
		<chunk item-count="10" skip-limit="3">
			<reader ref="extratorItemReader" />
			<processor ref="transformadorItemProcessor" />
			<writer ref="gravadorItemWriter" />


			<skippable-exception-classes>
				<include class="javax.transaction.RollbackException" />
				<include class="java.lang.IllegalStateException" />
				<include class="com.ibm.jbatch.container.exception.TransactionManagementException" />
			</skippable-exception-classes>
		</chunk>
	</step>
</job>
